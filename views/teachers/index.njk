{% extends "layout.njk" %}

{% block content %}
  <main class="card table-container">
    <table width="100%">
      
      <thead>
        
        <tr>
          <th>Nome Completo</th>
          <th>Área de Atuação</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for teacher in teachers %}
          <tr>
            <td>
              <span id="image-teacher" style="background-image: url({{teacher.avatar_url}})"></span>
              <span id="name-teacher">{{teacher.name}}</span>
            </td>
              <td>
            {% for area in teacher.area %}
                <span class="teacher-area">{{area}}</span>
            {% endfor %}
              </td>
            <td><a href="teachers/{{teacher.id}}">Ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <a id= "buttom-new-teacher" href="/teachers/register">Novo</a>
  </main>
{% endblock content %}