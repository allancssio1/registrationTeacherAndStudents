<div class="item">
  <div>Avatar URL</div>
  <input type="url" name="avatar_url" placeholder="http://" value="{{teacher.avatar_url}}">
</div>
<div class="item">
  <div>Nome Completo</div>
  <input type="text" name="name" placeholder="Nome" value="{{teacher.name}}">
</div>
<div class="item">
  <div>Data de Nascimento</div>
  <input type="date" name="birth_date" value="{{teacher.birth_date}}">
</div>
<div class="item">
  <div>Grau de Escolaridade</div>
  <select name="education_level">
    <option value="medio" class="option"
      {% if teacher.education_level == "medio" %}
        selected
      {% endif %}
    >Ensino Médio Completo</option>
    <option value="superior" class="option"
      {% if teacher.education_level == "superior" %}
        selected
      {% endif %}
    >Ensino Superior Completo</option>
    <option value="master" class="option"
      {% if teacher.education_level == "master" %}
        selected
      {% endif %}
    >Mestrado</option>
    <option value="doctor" class="option"
      {% if teacher.education_level == "doctor" %}
        selected
      {% endif %}
    >Doutorado</option>
  </select>
</div>
<div class="item">
  <div>Tipo de aula</div>
    <span>
      <input 
        type="radio"
        name="class_type"
        value="presential"
        {% if teacher.class_type == 'presential' %}
        checked
        {% endif %}>
          Presencial
    </span>
    <span>
      <input 
        type="radio"
        name="class_type"
        value="distance"
        {% if teacher.class_type == 'distance' %}
        checked
        {% endif %}>
      Ensino a Distância
    </span>
</div>
<div class="item">
  <div>
    Area de Atuação
  </div>
  <input
    type="text"
    name="subject_taught"
    placeholder="ex: Matemática, Física"
    value="{{teacher.subject_taught}}">
</div>
<button type="submit">Salvar</button>