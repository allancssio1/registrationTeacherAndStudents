{% extends "layout.njk" %}

{% block content %}
  <main class="card table-container">
    <div class="header">
      <a id= "buttom-new-id" href="/teachers/create">Novo</a>
      <form action="/teachers" method="get">
        <input type="text" name="filter"  value="{{filter}}" placehouder="Nome ou matéria">
        <button type="submit">Filtrar</button>
      </form>
    </div>
    <table width="100%">
      <thead>
        <tr>
          <th>Nome Completo</th>
          <th>Área de Atuação</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for teacher in teachers %}
          <tr>
            <td>
              <span id="image-id" style="background-image: url({{teacher.avatar_url}})"></span>
              <span id="name-id">{{teacher.name}}</span>
            </td>
              <td>
            {% for area in teacher.subject_taught %}
                <span class="area">{{area}}</span>
            {% endfor %}
              </td>
            <td><a href="teachers/{{teacher.id}}">Ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <div class="pagination"
      data-filter="{{filter}}"
      data-page="{{pagination.page}}"
      data-total="{{pagination.total}}">
    </div>
  </main>
{% endblock content %}