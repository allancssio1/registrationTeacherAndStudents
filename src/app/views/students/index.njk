{% extends "layout.njk" %}

{% block content %}
  <main class="card table-container">
    <a id= "buttom-new-id" href="/students/create">Novo</a>
    <table width="100%">
      
      <thead>
        
        <tr>
          <th>Nome Completo</th>
          <th>E-mail</th>
          <th>Ano Escolar</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for student in students %}
          <tr>
            <td>
              <span id="image-id" style="background-image: url({{student.avatar_url}})"></span>
              <span id="name-id">{{student.name}}</span>
            </td>
              <td>{{student.email}}</td>
              <td>{{student.educationLevel}}</td>
            <td><a href="students/{{student.id}}">Ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </main>
{% endblock content %}