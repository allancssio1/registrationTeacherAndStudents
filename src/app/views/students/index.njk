{% extends "layout.njk" %}

{% block content %}
  <main class="card table-container">
    <div class="header">
      <a id= "buttom-new-id" href="/students/create">Novo</a>
      <form action="/students" method="get">
        <input type="text" name="filter"  value="{{filter}}" placehouder="Nome">
        <button type="submit">Filtrar</button>
      </form>
    </div> 
    <table width="100%">
      
      <thead>
        
        <tr>
          <th>Nome Completo</th>
          <th>E-mail</th>
          <th>Ano Escolar</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for student in students %}
          <tr>
            <td>
              <span id="image-id" style="background-image: url({{student.avatar_url}})"></span>
              <span id="name-id">{{student.name}}</span>
            </td>
              <td>{{student.email}}</td>
              <td>{{student.education_level}}</td>
            <td><a href="students/{{student.id}}">Ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <div class="pagination"
      data-filter="{{filter}}"
      data-page="{{pagination.page}}"
      data-total="{{pagination.total}}"
      ></div>
  </main>
{% endblock content %}