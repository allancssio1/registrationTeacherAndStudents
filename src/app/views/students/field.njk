<div class="item">
  <div>Avatar URL</div>
  <input type="url" name="avatar_url" placeholder="http://" value="{{student.avatar_url}}">
</div>
<div class="item">
  <div>Nome Completo</div>
  <input type="text" name="name" placeholder="Nome" value="{{student.name}}">
</div>
<div class="item">
  <div>Data de Nascimento</div>
  <input type="date" name="birth" value="{{student.birth}}">
</div>
<div class="item">
  <div>E-mail</div>
  <input type="email" name="email" placeholder="ex.@ex.com" value="{{student.email}}">
</div>
<div class="item">
  <div>Ano Escolar</div>
  <select name="education_level">
    <option
      value="5EF"
      {% if student.education_level == "5EF" %}
        selected
      {% endif %}>
      5° Ano do Fundamental
    </option>
    <option
      value="6EF"
      {% if student.education_level == "6EF" %}
        selected
      {% endif %}>
      6° Ano do Fundamental
    </option>
    <option
      value="7EF"
      {% if student.education_level == "7EF" %}
        selected
      {% endif %}>
      7° Ano do Fundamental
    </option>
    <option
      value="8EF"
      {% if student.education_level == "8EF" %}
        selected
      {% endif %}>
      8° Ano do Fundamental
    </option>
    <option
      value="9EF"
      {% if student.education_level == "9EF" %}
        selected
      {% endif %}>
      9° Ano do Fundamental
    </option>
    <option
      value="1EM"
      {% if student.education_level == "1EM" %}
        selected
      {% endif %}>
      1° Ano do Médio
    </option>
    <option
      value="2EM"
      {% if student.education_level == "2EM" %}
        selected
      {% endif %}>
      2° Ano do Médio
    </option>
    <option
      value="3EM"
      {% if student.education_level == "3EM" %}
        selected
      {% endif %}>
      3° Ano do Médio
    </option>
  </select>
</div>
<div class="item">
  <div>Carga Horária</div>
  <input type="number" name="hour_class" placeholder="{{student.hour_class}}" value="{{student.hour_class}}">
</div>
<button type="submit">Salvar</button>