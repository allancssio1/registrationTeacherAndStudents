{% extends 'layout.njk' %}

{% block content %}
<form class="card" method="post" action="/students">
    <article 
      class="avatar"
      style= "background-image: url({{student.avatar_url}})">
    </article>

    <article class="details">

      <div class="item">
        <div>Nome Completo</div>
        <div type="text">{{student.name}}</div>
      </div>
      
      <div class="item">
        <div>Idade</div>
        <div>{{student.age}}</div>
      </div>
      
      <div class="item">
        <div>Idade</div>
        <div>{{student.birth}}</div>
      </div>

      <div class="item">
        <div>E-mail</div>
        <div>{{student.email}}</div>
      </div>

      <div class="item">
        <div>Grau de Escolaridade</div>
        <div>{{student.education_level}}</div>
      </div>
      
      <div class="item">
        <div>Carga Hor√°ria</div>
        <div>{{student.hour_class}}</div>
      </div>

      <div class="item">
        <div>Acompanhado por</div>
        <div>{{student.teacher_name}}</div>
      </div>
      <a class="button" href="/students/{{student.id}}/edit">Editar</a>
    </article>
  </form>
{% endblock content %}